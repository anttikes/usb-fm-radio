{
    "version": 3,
    "configurePresets": [
        {
            "name": "firmware",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "toolchainFile": "${sourceDir}/cmake/gcc-arm-none-eabi.cmake"
        },
        {
            "name": "firmware-debug",
            "displayName": "Debug",
            "inherits": "firmware",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "firmware-release",
            "displayName": "Release",
            "inherits": "firmware",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}