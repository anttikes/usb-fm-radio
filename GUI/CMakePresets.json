{
    "version": 3,
    "configurePresets": [
        {
            "name": "gui",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "toolchainFile": "$env{Qt6_DIR}/$env{Qt6_VERSION}/mingw_64/lib/cmake/Qt6/qt.toolchain.cmake",
            "cmakeExecutable": "$env{Qt6_DIR}/Tools/CMake_64/bin/cmake.exe",
            "environment": {
                "Qt6_DIR": "C:/Qt/",
                "Qt6_VERSION": "6.10.1",
                "PATH": "$env{Qt6_DIR}/Tools/mingw1310_64/bin;$env{Qt6_DIR}/Tools/Ninja"
            },
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG_INIT": "-DQT_QML_DEBUG -DQT_DECLARATIVE_DEBUG",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO_INIT": "-DQT_QML_DEBUG -DQT_DECLARATIVE_DEBUG"
            }
        },
        {
            "name": "gui-debug",
            "displayName": "Debug",
            "inherits": "gui",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gui-release",
            "displayName": "Release",
            "inherits": "gui",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}